<div class="column">
  <h3>{{ block.settings.title }}</h3>
  {{ block.settings.description }}
</div>

{% schema %}
  {
    "name": "column",
    "tag": "section",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default":"Example Title"
      },
      {
        "type": "richtext",
        "id": "description",
        "label": "Description",
        "default":"<p>Example Description</p>"
      }
    ],
    "presets": [
      {
        "name": "column"
      }
    ]
  }
{% endschema %}