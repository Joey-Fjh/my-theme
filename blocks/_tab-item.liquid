<div class="tab-title">
  {{ block.settings.title }}
</div>
<div class="tab-content">
  {% content_for 'blocks' %}
</div>

{% schema %}
{
  "name": "Tab Item",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    }
  ],
  "blocks": [
    { "type": "@app" },
    { "type": "@theme" }
  ],
  "presets": [
    {
      "name": "Tab Item"
    }
  ]
}
{% endschema %}