<script src='{{ 'my-userComment-container.js' | asset_url }}'  type="module"></script>

<my-user-comment-container>
    <div class="swiper">
        <div class="swiper-wrapper customer-comment">
        {%- for comment in block.settings.user_comments -%}
            <div class="comment__container swiper-slide">
                <div class="star">
                    {%- render 'icon-star',rating: comment.star.value | strip | times: 1 | round:0 -%}
                </div>
                <div class="product-name h3">
                    {{ all_products[comment.product].title }}
                </div>
                <div class="comment">
                    {{ comment.comment }}
                </div>
                <div class="divide"></div>
                <div class="customer-name h4">
                    {{ comment.customer_name }}
                </div>
                <div class="country">
                    Customer from {{ comment.country }}
                </div>
            </div>
        {%- endfor -%}
    </div>
    </div>
</my-user-comment-container>

{% schema %}
  {
    "name": "customer-comment",
    "settings": [
      {
        "type": "metaobject_list",
        "id": "user_comments",
        "label":"User Comments",
        "metaobject_type": "user_comment",
      }
    ],
    "presets": [
      {
        "name": "customer-comment"
      }
    ]
  }
{% endschema %}


{% stylesheet %}
.customer-comment{
  margin-top: 20px;
  display: flex;
  width: 100%;
  flex-shrink: 0;

  .comment__container{
    width: 300px;
    flex-shrink: 0;
    box-sizing: border-box;
    padding: 20px;
    border: 1px solid #e5e5e5;
    border-radius: 5%;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    gap: 10px;
    justify-content: center;

    .product-name,.customer-name{
      font-weight: 700;
    }

    .comment{
      display: -webkit-box;           
      -webkit-box-orient: vertical;
      -webkit-line-clamp: 2;       
      overflow: hidden;            
      text-overflow: ellipsis;      
    }

    .divide{
      display: block;
      width: 100%;
      height: 3px;
      background-color: #e5e5e5;
    }
  }

  @media (max-width: 995px){
    gap: 30px;
    overflow-x: scroll;

    &::-webkit-scrollbar {
      display: none;
    }
    scrollbar-width: none;
    -ms-overflow-style: none;
  }
}
{% endstylesheet %}
