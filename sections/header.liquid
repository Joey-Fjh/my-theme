{% schema %}
{
  "name": "t:sections.header.name",
  "tag": "section",
  "class": "section-header",
  "settings": [
    {
      "type": "text",
      "id": "logo_text",
      "label": "logo_text",
      "default":"LOGO"
    },
    {
      "type": "image_picker",
      "id": "logo_image",
      "label": "logo_image"
    },
  ]
}
{% endschema %}

<div class="header-container">
  <div class="header-menu__container">
    <ul class="menu">        
    {% for link in linklists.main-menu.links %}
      <li class="menu-link">
        <a href="{{ link.url }}">{{ link.title }}</a>
        
        {%- if link.links.size > 0 -%}
          <ul class="menu dropdown-child">
            {% for child_link in link.links %}
              <li class="menu-link">
                <a href="{{ child_link.url }}">{{ child_link.title }}</a>
                
                {%- if child_link.links.size > 0 -%}
                  <ul class="menu dropdown-grandChild">
                    {% for grandChild_link in child_link.links %}
                      <li class="menu-link">
                        <a href="{{ grandChild_link.url }}">{{ grandChild_link.title }}</a>
                      </li>
                    {% endfor %}
                  </ul>
                {%- endif -%}
              </li>
            {% endfor %}
          </ul>
        {%- endif -%}
      </li>
    {% endfor %}
    </ul>
  </div>
  <div class="header-logo__container">
    {%- if section.settings.logo_image %}
      {{  
        section.settings.logo_image |
        image_url: width: 48,height: 48 | 
        image_tag:
          alt: "logo",
          class:'header-logo__image',
          preload:true
      }}
      {%- else -%}
        <span class="heder-logo__text">{{ section.settings.logo_text }}</span>  
    {%- endif -%}
  </div>
  <div class="header-navigator__container">
    <div class="search-container">
      <form action="{{ routes.search_url }}" method="get" class="search-form">
        <input 
          type="text" 
          name="q" 
          class="search-input" 
          placeholder="Search..." 
          value="{{ search.terms | escape }}"
          autocomplete="off"
        />
        <button type="submit" class="search-btn">
          <svg class="search-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
            <circle cx="11" cy="11" r="8"></circle>
            <path d="m21 21-4.35-4.35"></path>
          </svg>
        </button>
      </form>
    </div>
    <div class="nav-icons">
      <!-- Wishlist/Heart Icon -->
      <a href="{{ routes.collections_url }}" class="nav-icon wishlist-icon">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
          <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
        </svg>
        <span class="nav-icon-count wishlist-count" style="display: none;">0</span>
      </a>

      <!-- User Account Icon -->
      <a href="{{ routes.account_url }}" class="nav-icon user-icon">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
          <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
          <circle cx="12" cy="7" r="4"></circle>
        </svg>
      </a>

      <!-- Shopping Cart Icon -->
      <a href="{{ routes.cart_url }}" class="nav-icon cart-icon">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
          <circle cx="9" cy="21" r="1"></circle>
          <circle cx="20" cy="21" r="1"></circle>
          <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path>
        </svg>
        {% if cart.item_count > 0 %}
          <span class="nav-icon-count cart-count">{{ cart.item_count }}</span>
        {% endif %}
      </a>
    </div>
  </div>
</div>

{%- stylesheet -%}
.header-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-left: 3.2rem;
  padding-right: 3.2rem;
  height: 60px;

  .header-menu__container {
    flex-basis: 40%;
  
    /* Main menu container */
    .menu {
      display: flex;
      align-items: center;
      list-style: none;
      margin: 0;
      padding: 0;
      gap: 8px;
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    }
  
    /* Menu link items */
    .menu-link {
      position: relative;
      display: inline-block;
    }
    
    /* Main menu links */
    .menu > .menu-link > a {
      display: inline-flex;
      align-items: center;
      padding: 8px 16px;
      text-decoration: none;
      color: #374151;
      font-size: 14px;
      font-weight: 500;
      border-radius: 20px;
      transition: all 0.2s ease;
      white-space: nowrap;
      background-color: transparent;
    }
  
    .menu > .menu-link > a:hover,
    .menu > .menu-link > a.active {
      background-color: #f3f4f6;
      color: #111827;
    }
    
    .menu-link:has(.dropdown-child) > a::after,
    .menu-link:has(.dropdown-grandChild) > a::after {
      content: '▼';
      margin-left: 8px;
      font-size: 12px;
      color: #000000;
      font-weight: bold;
      transition: transform 0.2s ease;
    }
    
    .menu-link:hover > a::after {
      transform: rotate(180deg);
    }
    
  
    /* Second level dropdown menu */
    .dropdown-child {
      position: absolute;
      top: 100%;
      left: 0;
      background: white;
      border: 1px solid #e5e7eb;
      border-radius: 8px;
      box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
      list-style: none;
      margin: 0;
      padding: 4px 0;
      min-width: 200px;
      z-index: 1000;
      opacity: 0;
      visibility: hidden;
      transform: translateY(-10px);
      transition: all 0.2s ease;
      margin-top: 4px;
    }
    
    .menu-link:hover > .dropdown-child {
      opacity: 1;
      visibility: visible;
      transform: translateY(0);
    }
  
    .dropdown-child:hover {
      opacity: 1;
      visibility: visible;
      transform: translateY(0);
    }
    
    .dropdown-child .menu-link {
      display: block;
      width: 100%;
    }
    
    .dropdown-child .menu-link > a {
      display: block;
      width: 100%;
      padding: 12px 20px;
      color: #374151;
      text-decoration: none;
      font-size: 14px;
      font-weight: 400;
      border-radius: 0;
      transition: all 0.2s ease;
      box-sizing: border-box;
    }
    
    .dropdown-child .menu-link:hover > a,
    .dropdown-child .menu-link > a:hover {
      background-color: #f8fafc;
      color: #111827;
      padding-left: 24px;
      border-left: 3px solid #3b82f6;
    }
    
    .dropdown-child .menu-link:first-child > a {
      border-top-left-radius: 6px;
      border-top-right-radius: 6px;
    }
    
    .dropdown-child .menu-link:last-child > a {
      border-bottom-left-radius: 6px;
      border-bottom-right-radius: 6px;
    }
    
    /* Third level dropdown menu */
    .dropdown-grandChild {
      position: absolute;
      top: 0;
      left: 100%;
      background: white;
      border: 1px solid #e5e7eb;
      border-radius: 8px;
      box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
      list-style: none;
      margin: 0;
      padding: 4px 0;
      min-width: 180px;
      z-index: 1001;
      opacity: 0;
      visibility: hidden;
      transform: translateX(-10px);
      transition: all 0.2s ease;
      margin-left: 8px;
    }
    
    .dropdown-child .menu-link:hover > .dropdown-grandChild {
      opacity: 1;
      visibility: visible;
      transform: translateX(0);
    }
    
    .dropdown-grandChild:hover {
      opacity: 1;
      visibility: visible;
      transform: translateX(0);
    }
    
    .dropdown-grandChild .menu-link {
      display: block;
      width: 100%;
    }
    
    .dropdown-grandChild .menu-link > a {
      display: block;
      width: 100%;
      padding: 10px 16px;
      color: #374151;
      text-decoration: none;
      font-size: 14px;
      font-weight: 400;
      border-radius: 0;
      transition: all 0.2s ease;
      box-sizing: border-box;
    }
    
    .dropdown-grandChild .menu-link:hover > a,
    .dropdown-grandChild .menu-link > a:hover {
      background-color: #dbeafe;
      color: #1d4ed8;
    }
    
    .dropdown-grandChild .menu-link:first-child > a {
      border-top-left-radius: 6px;
      border-top-right-radius: 6px;
    }
    
    .dropdown-grandChild .menu-link:last-child > a {
      border-bottom-left-radius: 6px;
      border-bottom-right-radius: 6px;
    }
    
    
    .dropdown-child .menu-link:has(.dropdown-grandChild) > a::after {
      content: '▶';
      margin-left: auto;
      margin-right: 8px;
      font-size: 10px;
      color: #9ca3af;
      font-weight: normal;
    }
    
    .dropdown-child .menu-link:not(:has(.dropdown-grandChild)) > a::after,
    .dropdown-grandChild .menu-link > a::after {
      display: none;
    }
    
    .dropdown-child .menu-link:hover,
    .dropdown-child .menu-link:has(.dropdown-grandChild:hover) {
      position: relative;
    }
    
    .dropdown-child .menu-link:hover > .dropdown-grandChild,
    .dropdown-child .menu-link:has(.dropdown-grandChild:hover) > .dropdown-grandChild {
      opacity: 1;
      visibility: visible;
      transform: translateX(0);
    }
    
    .menu-link {
      z-index: auto;
    }
    
    .menu-link:hover {
      z-index: 1001;
    }
  }

  .header-logo__container{
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
    
    .heder-logo__text {
      font-size: 4rem;
      font-weight: bold;
      letter-spacing: 2px;
      text-align: center;
      flex: 1;
    }
  }

  .header-navigator__container {
    flex-basis: 40%;
    display: flex;
    justify-content: flex-end;
    align-items: center;
    gap: 1.5rem;
    padding: 8px 0;

    .search-container {
      position: relative;
      display: flex;
      align-items: center;
    }

    .search-form {
      position: relative;
      display: flex;
      align-items: center;
    }

    .search-input {
      width: 240px;
      height: 40px;
      padding: 8px 40px 8px 16px;
      border: 1px solid #e5e7eb;
      border-radius: 20px;
      font-size: 14px;
      color: #374151;
      background-color: #ffffff;
      transition: all 0.2s ease;
      outline: none;
      font-family: inherit;
    }

    .search-input::placeholder {
      color: #9ca3af;
    }

    .search-input:focus {
      border-color: #3b82f6;
      box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
    }

    .search-btn {
      position: absolute;
      right: 4px;
      top: 50%;
      transform: translateY(-50%);
      width: 32px;
      height: 32px;
      border: none;
      background: transparent;
      cursor: pointer;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: background-color 0.2s ease;
    }

    .search-btn:hover {
      background-color: #f3f4f6;
    }

    .search-icon {
      width: 18px;
      height: 18px;
      color: #6b7280;
      stroke-width: 2;
    }

    .nav-icons {
      display: flex;
      align-items: center;
      gap: 12px;
    }

    .nav-icon {
      position: relative;
      display: flex;
      align-items: center;
      justify-content: center;
      width: 40px;
      height: 40px;
      border-radius: 50%;
      text-decoration: none;
      color: #374151;
      transition: all 0.2s ease;
      cursor: pointer;
    }

    .nav-icon:hover {
      background-color: #f3f4f6;
      color: #111827;
      text-decoration: none;
    }

    .nav-icon svg {
      width: 20px;
      height: 20px;
      stroke-width: 2;
    }

    .nav-icon-count {
      position: absolute;
      top: -2px;
      right: -2px;
      background-color: #ef4444;
      color: white;
      font-size: 11px;
      font-weight: 600;
      min-width: 18px;
      height: 18px;
      border-radius: 9px;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 0 4px;
      line-height: 1;
    }

    .wishlist-icon:hover {
      color: #ef4444;
    }

    .user-icon:hover {
      color: #3b82f6;
    }

    .cart-icon:hover {
      color: #059669;
    }
  }
}
{%- endstylesheet -%}