<responsive-container class="my-product-content__container"
  {% if section.settings.layout == 'page_width' %} my-page-width {% endif %}
>
  {% content_for 'blocks' %}
</responsive-container>


{% schema %}
  {
    "name": "my-product-content",
    "tag": "section",
    "class": "section",
    "settings": [
      {
        "type": "select",
        "id": "layout",
        "options": [
          {
            "value": "full_bleed",
            "label": "Full Bleed"
          },
          {
            "value": "page_width",
            "label": "Page Width"
          }
        ],
        "default": "full_bleed",
        "label": "Layout"
      },
    ],
    "blocks": [
      {
        "type": "tab-control"
      }
    ],
    "presets": [
      {
        "name": "my-product-content",
        "blocks": [
          { "type": "tab-control" }
        ]
      }
    ]
  }
{% endschema %}