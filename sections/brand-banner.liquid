{% schema %}
  {
    "name": "brand-banner",
    "tag": "section",
    "settings": [
      {
        "type": "color",
        "id": "background-color",
        "label": "Background Color",
        "default": "#ffffff"
      },
      {
        "type": "range",
        "id": "autoplay_speed",
        "label": "Autoplay Speed",
        "min": 2,
        "max": 10,
        "step": 1,
        "default": 5
      }
    ],
    "blocks": [
        {
            "type": "image",
            "name": "Image",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Image",
                }
            ]
      }
    ],
    "presets": [
      {
        "name": "brand-banner",
        "settings": {
        }
      }
    ]
  }
{% endschema %}

<div class="brand-banner__container">
    <div class="image-wrapper">
        {% for block in section.blocks %}
            {%- if block.settings.image -%}
                {{
                    block.settings.image
                    | image_url: width: 200
                    | image_tag:
                        height: block.settings.image.height,
                        width: block.settings.image.width,
                        alt: block.settings.image.alt,
                        class: 'image'
                }}
            {%- endif -%}
        {% endfor %}
    </div>
</div>

{%- javascript -%}
  $(document).ready(function() {

  });
{%- endjavascript -%}

{%- stylesheet -%}
  .brand-banner__container {
    margin-top: 2rem;

    .image-wrapper {
      width: 100%;
      height: 14rem;
      position: relative;
      display: flex;
      justify-content: space-around;
      align-items: center;
    }
  }
{%- endstylesheet -%}