{{ 'brand-banner.css' | asset_url | stylesheet_tag  }}
<script src="{{ 'my-brand-banner.js' | asset_url }}" type="module" defer></script>

<my-brand-banner class="brand-banner__container color-{{ section.settings.color_scheme }}
  section-{{ section.id }}-padding
  "
>
  <div class="brand__content">
    <div class="brand__item">
      {%- for block in section.blocks -%}
        {{ 
          block.settings.image
            | image_url: width: block.settings.image.width
            | image_tag: 
                alt: block.settings.image.alt,
                class: "brand-image"
        }}
        <a href="{{ block.settings.link }}" class="brand-link" aria-label="brand link"></a>       
      {%- endfor -%}
    </div>
  </div>
</my-brand-banner>

{% schema %}
  {
    "name": "brand-banner",
    "tag": "section",
    "class": "section",
    "settings": [
      {
        "type": "color_scheme",
        "id": "color_scheme",
        "label": "Color Scheme",
        "default": "scheme-1"
      },
      {
        "type": "select",
        "id": "scroll",
        "label": "Scroll Type",
        "options": [
          {
            "value": "none",
            "label": "None"
          },
          {
            "value": "auto",
            "label": "Auto"
          }
        ],
        "default": "none"
      },
      {
        "type": "select",
        "id": "scroll_direction",
        "label": "Scroll Direction",
        "options": [
          {
            "value": "-100%",
            "label": "Left"
          },
          {
            "value": "100%",
            "label": "Right"
          }
        ],
        "default": "-100%"
      },
      {
        "type": "select",
        "id": "scroll_speed",
        "label": "Scroll Speed",
        "options": [
          {
            "value": "3s",
            "label": "Slow"
          },
          {
            "value": "2s",
            "label": "Normal"
          },
          {
            "value": "1s",
            "label": "Fast"
          }
        ],
        "default": "2s"
      },
      {
        "type": "select",
        "id": "space",
        "label": "Space",
        "options": [
          {
            "value": "1rem",
            "label": "Small"
          },
          {
            "value": "2rem",
            "label": "Medium"
          },
          {
            "value": "3rem",
            "label": "Large"
          }
        ],
        "default": "2rem"
      }
    ],
    "blocks": [
      {
        "type": "image",
        "name": "Image",
        "settings": [
            {
              "type": "image_picker",
              "id": "image",
              "label": "Image",
            },
            {
              "type": "url",
              "id": "link",
              "label": "Link"
            }
        ]
      }
    ],
    "presets": [
      {
        "name": "brand-banner",
        "blocks": [
          {
            "type": "image"
          }
        ]
      }
    ]
  }
{% endschema %}