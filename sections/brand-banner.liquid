{% schema %}
  {
    "name": "brand-banner",
    "tag": "section",
    "settings": [
      {
        "type": "color",
        "id": "background_color",
        "label": "Background Color",
        "default": "#ffffff"
      },
      {
        "type": "checkbox",
        "id": "is_scroll",
        "label": "Is Scroll",
        "default":false
      },
      {
        "type": "radio",
        "id": "scroll_direction",
        "label": "Scroll Direction",
        "options": [
            { "value": "left", "label": "向左" },
            { "value": "right", "label": "向右" }
          ],
        "default": "left"
      }
    ],
    "blocks": [
        {
            "type": "image",
            "name": "Image",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Image",
                }
            ]
      }
    ],
    "presets": [
      {
        "name": "brand-banner",
        "settings": {
        }
      }
    ]
  }
{% endschema %}

<div class="brand-banner__container" id="brandBanner"
  data-scroll-direction="{{ section.settings.scroll_direction }}" data-section-id="{{ section.id }}">
    <div class="brand-banner__bgd" id="bannerTrack" data-is-scroll="{{ section.settings.is_scroll }}">
      {%- if section.settings.scroll_direction == 'right' -%}
        <div class="image-wrapper image-slide">
          {% for block in section.blocks %}
              {%- if block.settings.image -%}
                  {{
                      block.settings.image
                      | image_url: width: 200
                      | image_tag:
                          alt: block.settings.image.alt,
                          class: 'image'
                  }}
              {%- endif -%}
          {% endfor %}
        </div>
      {%- endif -%}
      
      <div class="image-wrapper">
          {% for block in section.blocks %}
              {%- if block.settings.image -%}
                  {{
                      block.settings.image
                      | image_url: width: 200
                      | image_tag:
                          alt: block.settings.image.alt,
                          class: 'image'
                  }}
              {%- endif -%}
          {% endfor %}
      </div>

      {%- if section.settings.scroll_direction == 'left' -%}
        <div class="image-wrapper image-slide">
          {% for block in section.blocks %}
              {%- if block.settings.image -%}
                  {{
                      block.settings.image
                      | image_url: width: 200
                      | image_tag:
                          alt: block.settings.image.alt,
                          class: 'image'
                  }}
              {%- endif -%}
          {% endfor %}
        </div>
      {%- endif -%}
    </div>
</div>

{{ 'brand-banner.css' | asset_url | stylesheet_tag  }}
<script src="{{ 'brand-banner.js' | asset_url }}" defer></script>

<style>
  .brand-banner__bgd {
    background-color: {{ section.settings.background_color }};
  }
</style>