{{ 'my-image-with-text.css' | asset_url | stylesheet_tag }}
<script src='{{ 'my-accordion-container.js' | asset_url }}' type='module' defer></script>

<responsive-container class="my-image-with-text__container">
    <responsive-container class="image__container">
        {{ 
            section.settings.image 
            | image_url: width: 676, height: 688 
            | image_tag:
                alt: section.settings.image.alt
        }}
    </responsive-container>

    <div class="content__container">
        <div class="title">{{ section.settings.title }}</div>
        <div class="subtitle">{{ section.settings.subtitle }}</div>

        <my-accordion-container class="accordion__container">
            {%- for block in section.blocks -%}
                <my-accordion-item
                    title="{{ block.settings.title }}"
                >
                    {{ block.settings.content }}
                </my-accordion-item>
            {%- endfor -%}
        </my-accordion-container>
    </div>
</responsive-container>

{% schema %}
{
    "name": "my-image-with-text",
    "tag": "section",
    "class": "section",
    "settings": [
        {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
        },
        {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default":"Why Choose Us",
        },
        {
            "type": "textarea",
            "id": "subtitle",
            "label": "Subtitle",
            "default":"We pride ourselves on offering products that meet the highest standards of quality."
        },
    ],
    "blocks": [
        {
            "type": "accordion_item",
            "name": "Accordion Item",
            "settings": [
                {
                    "type": "text",
                    "id": "title",
                    "label": "Title"
                },
                {
                    "type": "textarea",
                    "id": "content",
                    "label": "Content"
                }
            ]
        }
    ],
    "presets": [
        {
        "name": "my-image-with-text",
        "settings": {
        }
        }
    ]
}
{% endschema %}