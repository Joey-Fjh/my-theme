{{ 'my-image-with-text1.css' | asset_url | stylesheet_tag }}

{%- liquid
  assign title_block = section.blocks | where: "type", "title" | first
  assign desc_block =  section.blocks | where: "type", "description" | first
  assign avator_block = section.blocks | where: "type", "avatar" | first
-%}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<responsive-container class="my-image-with-text1__container 
  color-{{ section.settings.color_scheme }} gradient
  section-{{ section.id }}-padding
  my-page-width
  "
>
    <responsive-container class="image__container">
      {%- if section.settings.image != blank -%}
        {{ 
          section.settings.image
          | image_url: width: section.settings.image.width 
          | image_tag: 
              alt: section.settings.image.alt
        }}
      {%- else -%}
        {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
      {%- endif -%}
    </responsive-container>

    <div class="content">
      <div class="title h1">
        {{ title_block.settings.title }}
      </div>
      <div class="desc h3">
        {{ desc_block.settings.description }}
      </div>

      <div class="avator__container">
        <responsive-container class="avator-image__container">
          {%- if avator_block.settings.avatar != blank -%}
            {{ 
              avator_block.settings.avatar
              | image_url: width: avator_block.settings.avatar.width 
              | image_tag: avator_block.settings.avator.alt
            }}
          {%- else -%}
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
          {%- endif -%}
        </responsive-container>

        <div class="avator__info"> 
          <div class="name h3" style="margin-bottom:5px;">
            {{ avator_block.settings.name }}
          </div>
          <div class="job h5">
            {{ avator_block.settings.job }}
          </div>
        </div>
      </div>
    </div>
</responsive-container>

{% schema %}
  {
    "name": "my-image-with-text1",
    "tag": "section",
    "class": "section",
    "settings": [
      {
        "type": "color_scheme",
        "id": "color_scheme",
        "label": "Color Scheme",
        "default": "scheme-1"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "header",
        "content": "Padding"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Padding Top",
        "default": 0
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Padding Bottom",
        "default": 0
      }
    ],
    "blocks": [
      {
        "type": "title",
        "name": "Title",
        "limit": 1,
        "settings": [
          {
            "type": "inline_richtext",
            "id": "title",
            "label": "Title",
            "default":"Example Title"
          }
        ]
      },
      {
        "type": "description",
        "name": "Description",
        "limit": 1,
        "settings": [
          {
            "type": "richtext",
            "id": "description",
            "label": "Description",
            "default":"<p>Example Description</p>"
          }
        ]
      },
      {
        "type": "avatar",
        "name": "Avatar",
        "limit": 1,
        "settings": [
          {
            "type": "image_picker",
            "id": "avatar",
            "label": "Avatar"
          },
          {
            "type": "inline_richtext",
            "id": "name",
            "label": "Name",
            "default":"Example Name"
          },
          {
            "type": "inline_richtext",
            "id": "job",
            "label": "Job",
            "default":"Example Job"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "my-image-with-text1",
        "blocks": [
          {
            "type": "title"
          },
          {
            "type": "description"
          },
          {
            "type": "avatar"
          }
        ]
      }
    ]
  }
{% endschema %}