{{ 'my-user-comment.css' | asset_url | stylesheet_tag  }}
<script src='{{ 'my-userComment-container.js' | asset_url }}'  type="module" defer></script>

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<responsive-container class="my-user-comment__container section-{{ section.id }}-padding
  {% unless section.settings.is_fullWidth %} my-page-width {% endunless %}
  color-{{ section.settings.color_scheme }}
  "
>
  <my-user-comment-container>
    <div class="swiper">
      <div class="swiper-wrapper wrapper">
        {%- for comment in section.settings.user_comments -%}
          <div class="swiper-slide card">
            <responsive-container>
              {%- if all_products[comment.product].featured_image != blank-%}
                {{ 
                  all_products[comment.product].featured_image
                  | image_url: width: 329, height:410
                  | image_tag:
                    alt: all_products[comment.product].featured_image.alt 
                }}
              {%- else -%}
                {{ 'product-apparel-3' | placeholder_svg_tag: 'placeholder-svg' }}
              {%- endif -%}
            </responsive-container>

            <div class="product-name">
              {{ all_products[comment.product].title }}
            </div>
            <div class="star">
              {%- render 'icon-star',rating: comment.star.value | strip | times: 1 | round:0 -%}
            </div>
            <div class="customer-name">
              {{ comment.customer_name }}
            </div>
            <div class="comment">
              {{ comment.comment }}
            </div>
          </div>
        {%- endfor -%}
      </div>
  </div>
  </my-user-comment-container>
</responsive-container>

{% schema %}
  {
    "name": "my-user-comment",
    "tag": "section",
    "settings": [
      {
        "type": "color_scheme",
        "id": "color_scheme",
        "label": "Color Scheme",
        "default": "scheme-1"
      },
      {
        "type": "checkbox",
        "id": "is_fullWidth",
        "label": "Full Width",
        "default": false
      },
      {
        "type": "select",
        "id": "text_size",
        "label": "Text Size",
        "options": [
            {
                "value": "h2",
                "label": "Small"
            },
            {
                "value": "h1",
                "label": "Medium"
            },
            {
                "value": "h0",
                "label": "Large"
            }
        ],
        "default":"h1"
      },
      {
        "type": "metaobject_list",
        "id": "user_comments",
        "label":"User Comments",
        "metaobject_type": "user_comment",
      },
      {
        "type": "header",
        "content": "Padding"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Padding Top",
        "default": 0
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Padding Bottom",
        "default": 0
      }
    ],
    "presets": [
      {
        "name": "my-user-comment"
      }
    ]
  }
{% endschema %}