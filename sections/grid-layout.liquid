                {
                    "type": "header",
                    "content": "Color Settings"
                },
                {
                    "type": "color",
                    "id": "text_color",
                    "label": "Heading and Description",
                    "default": "#ffffff"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Grid Layout",
            "blocks": [
                {"type": "image_item"}
            ]
        }
    ]
}
{% endschema %}