{{ 'grid-layout.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="grid-layout__container
    section-{{ section.id }}-padding
    {% if section.settings.layout == 'page_width' %} my-page-width {% endif %}"
    style="
        --row-height:{{ section.settings.row_height }}rem;
        --max-columns:{{ section.settings.max_columns }};
        --gap:{{ section.settings.desktop_column_gap }}px;
        --mobile-gap:{{ section.settings.mobile_column_gap }}px;
    "
> 
    {%- for block in section.blocks -%}
        {%- assign placeholder_index = forloop.index0 | modulo: 3 | plus: 1 -%}
        {%- assign placeholder_image = 'hero-apparel-' | append: placeholder_index -%}
        
        {%- case block.type -%}
            {%- when 'image_item' -%}
                <div class="image__container"
                    style="
                        --row-span:{{ block.settings.row }};
                        --column-span:{{ block.settings.column }};
                        --border-radius:{{ section.settings.border_radius }}%;
                    "
                >
                    <responsive-container class="pc_image">
                        {%- if block.settings.image -%}
                            <img
                                style="object-fit:{{ block.settings.image_fit }};opacity:{{ block.settings.image_opacity }}%;"
                                src="{{ block.settings.image | image_url }}"
                                width="{{ block.settings.image.width }}"
                                height="{{ block.settings.image.height }}"
                                alt="{{ block.settings.image.alt | escape }}"
                            >
                        {%- else -%}
                            {{ placeholder_image | placeholder_svg_tag: "placeholder-svg" }}
                        {%- endif -%}
                    </responsive-container>

                    <responsive-container class="mobile_image">
                        {%- if block.settings.mobile_image -%}
                            <img
                                style="object-fit:{{ block.settings.image_fit }};opacity:{{ block.settings.image_opacity }}%;"
                                src="{{ block.settings.mobile_image | image_url }}"
                                width="{{ block.settings.mobile_image.width }}"
                                height="{{ block.settings.mobile_image.height }}"
                                alt="{{ block.settings.mobile_image.alt | escape }}"
                            >
                        {%- else -%}
                            {{ placeholder_image | placeholder_svg_tag: "placeholder-svg" }}
                        {%- endif -%}
                    </responsive-container>

                    <div class="image__position
                        content--{{ block.settings.content_position }}"
                    >
                        <div class="image__content"
                            style="
                                --text-color:{{ block.settings.text_color }};
                            "
                        >
                            {%- assign number = block.settings.text_size | remove:'h' | plus: 1 -%}
                            {%- assign new_size = 'h' | append: number -%}

                            <div class="heading {{ block.settings.text_size }}">
                                {{ block.settings.heading }}
                            </div>
                            <div class="description {{ new_size }}">
                                {{ block.settings.description }}
                            </div>
                        </div>
                    </div>
                </div>
        {% endcase %}                
    {%- endfor -%}
</div>

{% schema %}
{
    "name": "Grid Layout",
    "tag": "section",
    "class": "section",
    "settings": [
        {
            "type": "header",
            "content": "Grid Layout"
        },
        {
            "type": "select",
            "id": "layout",
            "options": [
            {
                "value": "full_bleed",
                "label": "Full Bleed"
            },
            {
                "value": "page_width",
                "label": "Page Width"
            }
            ],
            "default": "full_bleed",
            "label": "Layout"
        },
        {
            "type": "range",
            "id": "row_height",
            "min": 10,
            "max": 50,
            "step": 1,
            "default": 10,
            "label": "Row Height",
            "unit": "rem"
        },
        {
            "type": "range",
            "id": "max_columns",
            "min": 1,
            "max": 4,
            "step": 1,
            "default": 2,
            "label": "Maximum number of columns"
        },
        {
            "type": "range",
            "id": "desktop_column_gap",
            "min": 0,
            "max": 100,
            "step": 1,
            "default": 10,
            "label": "Desktop Column Gap",
            "unit": "px"
        },
        {
            "type": "range",
            "id": "mobile_column_gap",
            "min": 0,
            "max": 50,
            "step": 1,
            "default": 5,
            "label": "Mobile Column Gap",
            "unit": "px"
        },
        {
            "type": "header",
            "content": "Border"
        },
        {
            "type": "range",
            "id": "border_radius",
            "min": 0,
            "max":10,
            "step": 1,
            "default":0,
            "label": "Border Radius"
        },
        {
            "type": "header",
            "content": "Padding"
        },
        {
            "type": "range",
            "id": "padding_top",
            "min": 0,
            "max": 100,
            "step": 4,
            "unit": "px",
            "label": "Padding Top",
            "default": 0
        },
        {
            "type": "range",
            "id": "padding_bottom",
            "min": 0,
            "max": 100,
            "step": 4,
            "unit": "px",
            "label": "Padding Bottom",
            "default": 0
