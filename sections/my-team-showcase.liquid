{{ 'my-team-showcase.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="my-team-showcase__container 
    color-{{ section.settings.color_scheme }} gradient
    section-{{ section.id }}-padding
    my-page-width
    "
>
    <div class="content__container">
        <div class="title h1">
            {{ section.settings.text }}
        </div>
        <div class="description h3">
            {{ section.settings.description }}
        </div>
        <a href="{{ section.settings.btn_url }}">
            <button class="button">
                {{ section.settings.btn_text }}
            </button>
        </a>
    </div>

    {%- for block in section.blocks -%}
        <div class="member__container">
            <responsive-container>
                {%- if block.settings.image != blank -%}
                    {{ 
                        block.settings.image
                        | image_url: width: block.settings.image.width
                        | image_tag:
                            alt: block.settings.image.alt
                    }}
                {%- else -%}
                    {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                {%- endif -%}    
            </responsive-container>
            <div class="name h3">
                {{ block.settings.name }}
            </div>
            <div class="job h5">
                {{ block.settings.job }}
            </div>
        </div>
    {%- endfor -%}
</div>

{% schema %}
  {
    "name": "my-team-showcase",
    "tag": "section",
    "class": "section",
    "settings": [
        {
            "type": "color_scheme",
            "id": "color_scheme",
            "label": "Color Scheme",
            "default": "scheme-1"
        },
        {
            "type": "header",
            "content": "Text Settings"
        },
        {
            "type": "inline_richtext",
            "id": "text",
            "label": "Text",
            "default": "Meet Our Team Of Creators,Designers,And World-Class Problem Solvers"
        },
        {
            "type": "richtext",
            "id": "description",
            "label": "Description",
            "default": "<p>There are many variations of passages of Lorem Ipsum available, but the majority have suffered alteration in some form, by injected humour, or randomised words.</p>"
        },
        {
            "type": "text",
            "id": "btn_text",
            "label": "Button Text",
            "default": "Join Our Team"
        },
        {
            "type": "url",
            "id": "btn_url",
            "label": "Button URL"
        },
        {
            "type": "header",
            "content": "Padding"
        },
        {
            "type": "range",
            "id": "padding_top",
            "min": 0,
            "max": 100,
            "step": 4,
            "unit": "px",
            "label": "Padding Top",
            "default": 0
        },
        {
            "type": "range",
            "id": "padding_bottom",
            "min": 0,
            "max": 100,
            "step": 4,
            "unit": "px",
            "label": "Padding Bottom",
            "default": 0
        }
    ],
    "blocks": [
        {
            "type": "team_member",
            "name": "Team Member",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Image"
                },
                {
                    "type": "inline_richtext",
                    "id": "name",
                    "label": "Name"
                },
                {
                    "type": "inline_richtext",
                    "id": "job",
                    "label": "Job"
                }
            ]
        }
    ],
    "max_blocks": 6,
    "presets": [
      {
        "name": "my-team-showcase",
        "blocks": [
            {
                "type": "team_member"
            }
        ]
      }
    ]
  }
{% endschema %}