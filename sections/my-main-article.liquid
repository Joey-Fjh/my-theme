{{ 'my-main-article.css' | asset_url | stylesheet_tag }}

<responsive-container class="my-main-article__container">
    <responsive-container class="banner-image__container">
      {%- if section.settings.image != blank -%}
        {{ 
          section.settings.image
          | image_url: width: section.settings.image.width
          | image_tag:
              alt: section.settings.image.alt
        }}
      {%- else -%}
        {{  'blog-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
      {%- endif -%}
      
      <div class="title h0">
        Blog Details
      </div>
    </responsive-container>
    
    <div class="content__container my-page-width">
      <div class="content">
        <h1>
          {{ article.title }}
        </h1>
        <div class="article-content">
          {{ article.content }}
        </div>
        
        <div class="article-social__container">
          <div class="article-tag">
            <span>Tag: </span>
            {%- for tag in article.tags -%}
              <span class="tag">
                {{ tag }}
              </span>
            {%- endfor -%}
          </div>
          
          <div class="article-social">
            <span>Share this post:</span>

            {%- render 'social-icons',
              show_youtube:false,
              show_pinterest:false,
              show_snapchat:false,
              show_tumblr:false,
              show_vimeo:false
            -%}
          </div>
        </div>
      </div>

      <div class="pagination">
        <a href="{% if blog.previous_article == nil %} javascript:void(0) {% else %} {{ blog.previous_article }} {% endif %}" 
          class="pagination__link pagination__link--prev {% if blog.previous_article == nil  %} pagination__link--disabled {% endif %}">
          <span class="pagination__label">PREVIOUS</span>
          
          <span class="pagination__title">
            {%- if blog.previous_article -%}
              {{ blog.previous_article.title }}
            {%- else -%}
              No previous article
            {%- endif -%}
          </span>
        </a>
        
        <div class="pagination__divider"></div>
        
        <a href="{% if blog.next_article == nil %} javascript:void(0) {% else %} {{ blog.next_article }} {% endif %}" 
          class="pagination__link pagination__link--next {% if blog.next_article == nil  %} pagination__link--disabled {% endif %}">
          <span class="pagination__label">NEXT</span>
          <span class="pagination__title">
            {%- if blog.next_article -%}
              {{ blog.next_article.title }}
            {%- else -%}
              no next article
            {%- endif -%}
          </span>
        </a>
      </div>

      {%- if blog.comments_enabled? -%}
        <div class="comment__container">
          <div class="comment-show">
            <h1 class="title">
              <span>Comments</span>
              <span id="Comments-{{ article.id }}" tabindex="-1">
                {{ 'blogs.article.comments' | t: count: article.comments_count }}
              </span>
            </h1>

            <div class="comments {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in {% endif %}">
              {%- if article.comments_count > 0 -%}
                {%- assign anchor_id = '#Comments-' | append: article.id -%}

                {% paginate article.comments by 5 %}
                  <div class="article-template__comments">
                    {%- if comment.status == 'pending' and comment.content -%}
                      <article id="{{ comment.id }}" class="article-template__comments-comment">
                        <div class="post-author">
                          {%- render 'icon-comment-avator'-%}
                          <div class="author-info">
                            <h2 class="author-name" style="font-weight:500;margin:0;">{{ comment.author }}</h2>
                            <time class="post-date">{{- comment.created_at | time_tag: format: 'date' -}}</time>
                          </div>
                        </div>
                        <div class="post-content">
                          {{ comment.content }}
                        </div>
                      </article>
                    {%- endif -%}

                    {%- for comment in article.comments -%}
                      <article id="{{ comment.id }}" class="article-template__comments-comment">
                        <div class="author-avator">
                          {%- render 'icon-comment-avator'-%}
                        </div>
                        <div class="author-info">
                          <h2 class="author-name" style="font-weight:500;margin:0;">{{ comment.author }}</h2>
                          <time class="post-date">{{- comment.created_at | time_tag: format: 'date' -}}</time>
                        </div>
                        <div class="post-content">
                          {{ comment.content | truncatewords:50}}
                        </div>
                      </article>
                    {%- endfor -%}

                    {% render 'pagination', paginate: paginate, anchor: anchor_id %}
                  </div>
                {% endpaginate %}
              {%- endif -%}
            </div>
          </div>

          <div class="comment-form">
            {% form 'new_comment', article %}
              {%- liquid
                assign post_message = 'blogs.article.success'
                if blog.moderated? and comment.status == 'unapproved'
                  assign post_message = 'blogs.article.success_moderated'
                endif
              -%}

              <h1 style="font-weight:600;text-align:left;">{{ 'blogs.article.comment_form_title' | t }}</h1>
              {%- if form.errors -%}
                <div class="form__message" role="alert">
                  <h3 class="form-status caption-large text-body" tabindex="-1" autofocus>
                    <span class="svg-wrapper">
                      {{- 'icon-error.svg' | inline_asset_content -}}
                    </span>
                    {{ 'templates.contact.form.error_heading' | t }}
                  </h3>
                </div>

                <ul class="form-status-list caption-large">
                  {%- for field in form.errors -%}
                    <li>
                      <a href="#CommentForm-{{ field }}" class="link">
                        {%- if form.errors.translated_fields[field] contains 'author' -%}
                          {{ 'blogs.article.name' | t }}
                        {%- elsif form.errors.translated_fields[field] contains 'body' -%}
                          {{ 'blogs.article.message' | t }}
                        {%- else -%}
                          {{ form.errors.translated_fields[field] }}
                        {%- endif -%}
                        {{ form.errors.messages[field] }}
                      </a>
                    </li>
                  {%- endfor -%}
                </ul>

              {%- elsif form.posted_successfully? -%}
                <div class="form-status-list form__message" role="status">
                  <h3 class="form-status" tabindex="-1" autofocus>
                    <span class="svg-wrapper">
                      {{- 'icon-success.svg' | inline_asset_content -}}
                    </span>
                    {{ post_message | t }}
                  </h3>
                </div>
              {%- endif -%}

              <div
                {% if blog.moderated? == false %}
                  class="article-template__comments-fields"
                {% endif %}
              >
                <div class="article-template__comment-fields">
                  <div class="field field--with-error">
                    <input
                      type="text"
                      name="comment[author]"
                      id="CommentForm-author"
                      class="field__input"
                      autocomplete="name"
                      value="{{ form.author }}"
                      aria-required="true"
                      required
                      {% if form.errors contains 'author' %}
                        aria-invalid="true"
                        aria-describedby="CommentForm-author-error"
                      {% endif %}
                      placeholder="Enter your name"
                    >
                    <label class="field__label" for="CommentForm-author">
                      <span>Enter your name</span>
                      <span aria-hidden="true">*</span></label
                    >
                    {%- if form.errors contains 'author' -%}
                      <small id="CommentForm-author-error">
                        <span class="form__message">
                          <span class="svg-wrapper">
                            {{- 'icon-error.svg' | inline_asset_content -}}
                          </span>
                          {{- 'blogs.article.name' | t }}
                          {{ form.errors.messages.author }}.</span
                        >
                      </small>
                    {%- endif -%}
                  </div>
                  <div class="field field--with-error">
                    <input
                      type="email"
                      name="comment[email]"
                      id="CommentForm-email"
                      autocomplete="email"
                      class="field__input"
                      value="{{ form.email }}"
                      autocorrect="off"
                      autocapitalize="off"
                      aria-required="true"
                      required
                      {% if form.errors contains 'email' %}
                        aria-invalid="true"
                        aria-describedby="CommentForm-email-error"
                      {% endif %}
                      placeholder="yourname@email.com"
                    >
                    <label class="field__label" for="CommentForm-email">
                      <span>yourname@example.com</span>
                      <span aria-hidden="true">*</span></label
                    >
                    {%- if form.errors contains 'email' -%}
                      <small id="CommentForm-email-error">
                        <span class="form__message">
                          <span class="svg-wrapper">
                            {{- 'icon-error.svg' | inline_asset_content -}}
                          </span>
                          {{- 'blogs.article.email' | t }}
                          {{ form.errors.messages.email }}.</span
                        >
                      </small>
                    {%- endif -%}
                  </div>
                </div>
                <div class="field field--with-error">
                  <textarea
                    rows="5"
                    name="comment[body]"
                    id="CommentForm-body"
                    class="text-area field__input"
                    aria-required="true"
                    required
                    {% if form.errors contains 'body' %}
                      aria-invalid="true"
                      aria-describedby="CommentForm-body-error"
                    {% endif %}
                    placeholder="Enter your message"
                  >{{ form.body }}</textarea>
                  <label class="form__label field__label" for="CommentForm-body">
                    <span>Enter your message</span>
                    <span aria-hidden="true">*</span></label
                  >
                </div>
                {%- if form.errors contains 'body' -%}
                  <small id="CommentForm-body-error">
                    <span class="form__message">
                      <span class="svg-wrapper">
                        {{- 'icon-error.svg' | inline_asset_content -}}
                      </span>
                      {{- 'blogs.article.message' | t }}
                      {{ form.errors.messages.body }}.</span
                    >
                  </small>
                {%- endif -%}
              </div>
              {%- if blog.moderated? -%}
                <p class="article-template__comment-warning caption">{{ 'blogs.article.moderated' | t }}</p>
              {%- endif -%}
              <input type="submit" class="button" value="Submit">
            {% endform %}
          </div>
        </div>
      {%- endif -%}
    </div>
</responsive-container>

{% schema %}
  {
    "name": "my-main-article",
    "tag": "section",
    "class": "section",
    "settings": [
        {
            "type": "image_picker",
            "id": "image",
            "label": "Banner Image"
        }
    ],
    "presets": [
      {
        "name": "my-main-article"
      }
    ]
  }
{% endschema %}