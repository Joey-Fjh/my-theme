{{ 'my-color-comparison.css' | asset_url | stylesheet_tag }}
<script defer type="module" src="{{ 'my-colorComparison-container.js' | asset_url }}"></script>

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<responsive-container class="my-color-comparison__container section-{{ section.id }}-padding
{% unless section.settings.is_fullWidth %} my-page-width {% endunless %}
  "
>
  {% if section.settings.show_header %}
    {%- assign number = section.settings.text_size | slice:1 -%}
    {%- assign size = number | plus: 1 -%}

    <div class="section-header text-{{ section.settings.text_align }}" style="color:{{ section.settings.font_color }}">
      {% if section.settings.title != blank %}
        <h2 class="title {{ section.settings.text_size }}">{{ section.settings.title }}</h2>
      {% endif %}

      {% if section.settings.subtitle != blank %}
        <p class="subtitle {{ section.settings.text_size | slice: 0 | append: size }}">{{ section.settings.subtitle }}</p>
      {% endif %}
    </div>
  {% endif %}

  <my-color-comparison-container class="color-comparison-wrapper">
    <div class="comparison-container">
      <div class="image-container">
        <!-- Left Image -->
        <div class="comparison-image left-image">
          {% if section.settings.left_image != blank %}
            <img
              width="1240"
              height="800" 
              src="{{ section.settings.left_image | image_url: width:section.settings.left_image.width }}" 
              alt="{{ section.settings.left_label }}" 
              draggable="false"
            />
          {%- else -%}
            {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
          {% endif %}
        </div>
        <div class="image-label left-label">
            <span class="label-text">{{ section.settings.left_label }}</span>
            {% if section.settings.left_link != blank %}
              <a href="{{ section.settings.left_link }}" class="view-product">View Product</a>
            {% endif %}
        </div>
        <!-- Right Image -->
        <div class="comparison-image right-image">
          {% if section.settings.right_image != blank %}
            <img
              width="1240"
              height="800" 
              src="{{ section.settings.right_image | image_url: width:section.settings.right_image.width }}" 
              alt="{{ section.settings.right_label }}" 
              draggable="false"
            />
          {%- else -%}
            {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder-svg' }}
          {% endif %}
        </div>
        <div class="image-label right-label">
            <span class="label-text">{{ section.settings.right_label }}</span>
            {% if section.settings.right_link != blank %}
              <a href="{{ section.settings.right_link }}" class="view-product">View Product</a>
            {% endif %}
        </div>
      </div>

      <!-- Drag Handle -->
      <div class="drag-handle" data-handle>
        <div class="handle-icon">
          <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
            <path d="M6 4L2 8L6 12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M10 4L14 8L10 12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </div>
      </div>

      <div class="slider-line" data-slider-line></div>
    </div>
  </my-color-comparison-container>
</responsive-container>

{% schema %}
{
  "name": "my-color-omparison",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "checkbox",
      "id": "is_fullWidth",
      "label": "Full Width",
      "default":false
    },
    {
      "type": "color",
      "id": "font_color",
      "label": "Font Color",
      "default":"#000"
    },
    {
      "type": "header",
      "content": "Section Header"
    },
    {
      "type": "checkbox",
      "id": "show_header",
      "label": "Show section header",
      "default": true
    },
    {
      "type": "inline_richtext",
      "id": "title",
      "label": "Title",
      "default": "CHOOSE YOUR COLOUR"
    },
    {
      "type": "inline_richtext",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "OUR BEST SELLERS"
    },
    {
      "type": "select",
      "id": "text_size",
      "label": "Text Size",
      "options": [
        {
          "value": "h2",
          "label": "Small"
        },
        {
          "value": "h1",
          "label": "Medium"
        },
        {
          "value": "h0",
          "label": "Large"
        }
      ],
      "default":"h1"
    },
    {
      "type": "select",
      "id": "text_align",
      "label": "Text Align",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default":"middle"
    },
    {
      "type": "header",
      "content": "Left Image"
    },
    {
      "type": "image_picker",
      "id": "left_image",
      "label": "Left image"
    },
    {
      "type": "text",
      "id": "left_label",
      "label": "Left label",
      "default": "Example Label"
    },
    {
      "type": "url",
      "id": "left_link",
      "label": "Left product link"
    },
    {
      "type": "header",
      "content": "Right Image"
    },
    {
      "type": "image_picker",
      "id": "right_image",
      "label": "Right image"
    },
    {
      "type": "text",
      "id": "right_label",
      "label": "Right label",
      "default": "Example Lable"
    },
    {
      "type": "url",
      "id": "right_link",
      "label": "Right product link"
    },
    {
      "type": "header",
      "content": "Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 0
    }
  ],
  "presets": [
    {
      "name": "my-color-comparison"
    }
  ]
}
{% endschema %}

