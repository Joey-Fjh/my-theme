{{ 'my-video-player.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{%- liquid 
  assign video_id = section.settings.my_video.id | default: section.settings.video_url.id
  assign video_alt = section.settings.my_video.alt | default: section.settings.description
  assign alt = 'sections.video.load_video' | t: description: video_alt | escape
  assign poster = section.settings.video.preview_image | default: section.settings.cover_image
-%}

<responsive-container class="my-video-player__container
  {%- unless section.settings.is_fullWidth -%} my-page-width {%- endunless -%}
  section-{{ section.id }}-padding   
  " 
  data-media-id="{{ video_id }}"
> 
  <deferred-media
    style="width:100%;height:100%;"
    {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in {% endif %} 
    data-media-id="{{ video_id }}"
    class="deferred-media color-{{ section.settings.color_scheme }}"
  >
    <button
      style="width:100%;height:100%;padding:0;border:0;cursor:pointer;"
      id="Deferred-Poster-Modal-{{ video_id }}"
      type="button"
      aria-label="{{ alt }}"
      class="deferred-media__poster"
    >
      <responsive-container>
        {%- if poster != null -%}
            {{
              poster
              | image_url: width: 3840
              | image_tag: sizes: '100vw', widths: '375, 750, 1100, 1500, 1780, 2000, 3000, 3840', alt: alt
        }}
        {%- else -%}
          {{ 'hero-apparel-3' | placeholder_svg_tag: 'placeholder-svg placeholder' }}
        {%- endif -%}
      </responsive-container>

      <div class="my-video-player__controls">
        <div class="my-video-player__info h2">
          {{ section.settings.title }}
        </div>
        <div class="my-video-player__button h2" aria-label="{{ alt }}">
          <span class="play-circle">
            {{- 'play.svg' | inline_asset_content -}}
          </span>
          {{ section.settings.button_text }}
        </div>
      </div>
    </button>

    <template>
      {%- if section.settings.video == null and section.settings.video_url != null -%}
        {%- liquid
          assign loop = ''
          if section.settings.enable_video_looping
            assign loop = '&loop=1&playlist=' | append: video_id
          endif
        -%}

        {%- if section.settings.video_url.type == 'youtube' -%}
          <iframe
            src="https://www.youtube.com/embed/{{ video_id }}?enablejsapi=1&autoplay=1{{ loop }}"
            class="iframe"
            allow="autoplay; encrypted-media"
            allowfullscreen
            title="{{ section.settings.description | escape }}"
          ></iframe>
        {%- else -%}
          <iframe
            src="https://player.vimeo.com/video/{{ video_id }}?autoplay=1{{ loop }}"
            class="iframe"
            allow="autoplay; encrypted-media"
            allowfullscreen
            title="{{ section.settings.description | escape }}"
          ></iframe>
        {%- endif -%}
      {%- else -%}
        {{
          section.settings.my_video
          | video_tag:
            image_size: '3840x',
            autoplay: true,
            loop: section.settings.enable_video_looping,
            controls: true,
            muted: false
        }}
      {%- endif -%}
    </template>

    <div class="my-video-player__social-share">
      <span class="social-media">
          {{- 'facebook.svg' | inline_asset_content -}}
      </span>
      <span class="social-media">
          {{- 'twitter.svg' | inline_asset_content -}}
      </span>
      <span class="social-media">
          {{- 'ins.svg' | inline_asset_content -}}
      </span>
      <span class="social-media">
          {{- 'tiktok.svg' | inline_asset_content -}}
      </span>
      <div class="social-badge">
        <span class="social-text">GET 20% OFF</span>
      </div>
    </div>
  </deferred-media>
</responsive-container>

{% schema %}
  {
    "name": "my-video-player",
    "tag": "section",
    "class": "section",
    "settings": [
      {
        "type": "color_scheme",
        "id": "color_scheme",
        "label": "Color Scheme",
        "default": "scheme-1"
      },
      {
        "type": "checkbox",
        "id": "is_fullWidth",
        "label": "Full Width",
        "default": false
      },
      {
        "type": "header",
        "content": "Text"
      },
      {
        "type": "inline_richtext",
        "id": "title",
        "label": "Title",
        "default":"Watch the Full Video About Our Concept Store"
      },
      {
        "type": "inline_richtext",
        "id": "button_text",
        "label": "Button Text",
        "default":"Watch Now"
      },
      {
        "type": "checkbox",
        "id": "enable_video_looping",
        "label": "Enable Video Looping",
        "default": false
      },
      {
        "type": "header",
        "content": "Video on Shopify"
      },
      {
        "type": "video",
        "id": "my_video",
        "label": "Select Video"
      },
      {
        "type": "header",
        "content": "Video iframe URL"
      },
      {
        "type": "paragraph",
        "content": "Display a video when not select video on shopify"
      },
      {
        "type": "video_url",
        "id": "video_url",
        "accept": ["youtube", "vimeo"],
        "default": "https://www.youtube.com/watch?v=_9VUPq3SxOc",
        "label": "URL",
        "info": "Use youtube or vimeo video url"
      },
      {
        "type": "image_picker",
        "id": "cover_image",
        "label": "Select Cover Image"
      },
      {
        "type": "text",
        "id": "description",
        "label": "Description",
        "info": "t:sections.video.settings.description.info"
      },
      {
        "type": "header",
        "content": "Padding"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Padding Top",
        "default": 0
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Padding Bottom",
        "default": 0
      }
    ],
    "presets": [
      {
        "name": "my-video-player"
      }
    ]
  }
{% endschema %}