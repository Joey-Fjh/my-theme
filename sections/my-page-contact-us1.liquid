{{'my-page-contact-us1.css' | asset_url | stylesheet_tag }}

<responsive-container class="my-page-contact-us1__container">
    {{ 
        section.settings.banner_image 
        | image_url: width: 1440, height: 600
        | image_tag:
            alt: section.settings.banner_image.alt
    }}
    <div class="wrapper">
        <h1 class="title h0">{{ section.settings.banner_title }}</h1>
    </div>
</responsive-container>

{% schema %}
  {
    "name": "my-page-contact-us1",
    "tag": "section",
    "settings": [
        {
            "type": "image_picker",
            "id": "banner_image",
            "label": "Banner Image"
        },
        {
            "type": "text",
            "id": "banner_title",
            "label": "Banner Title"
        }
    ],
    "presets": [
      {
        "name": "my-page-contact-us1",
        "settings": {
        }
      }
    ]
  }
{% endschema %}