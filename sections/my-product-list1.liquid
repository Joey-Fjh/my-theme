{% schema %}
{
  "name": "my-product-list1",
  "tag": "section",
  "class": "product-list-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero Image",
      "info": "Upload the main display image for the left side"
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Select Product"
        },
        {
          "type": "text",
          "id": "custom_description",
          "label": "Custom Description",
          "info": "Override the default product description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "my-product-list1",
      "blocks": [
        {
          "type": "product"
        },
        {
          "type": "product"
        },
        {
          "type": "product"
        },
        {
          "type": "product"
        },
        {
          "type": "product"
        }
      ]
    }
  ]
}
{% endschema %}

<div class="my-product-list1__container" data-section-id="{{ section.id }}">
    <!-- Left side - Hero image -->
    <div class="hero-image-container">
    {% if section.settings.hero_image %}
        <img  width='756' height="1024" src="{{ section.settings.hero_image | image_url: width: 756 }}" 
            alt="{{ section.settings.hero_image.alt | default: 'Hero image' }}"
            class="hero-image">
    {% endif %}
    </div>

    <!-- Right side - Product list -->
    <div class="product-list-container">
    {% for block in section.blocks %}
        {% if block.type == 'product' %}
            {% assign product = all_products[block.settings.product] %}
            {% if product %}
                <div class="product-card" data-product-id="{{ product.id }}">
                    <div class="product-image">
                        {% if product.featured_image %}
                        <img width='200' height="200" src="{{ product.featured_image | image_url: width:200 }}" 
                                alt="{{ product.featured_image.alt | default: product.title }}">
                        {% endif %}
                    </div>
                    
                    <div class="product-info">
                        <h3 class="product-title">{{ product.title }}</h3>
                        <p class="product-description">{{ block.settings.custom_description | default: product.description | truncate: 60 }}</p>
                        
                        <div class="product-pricing">
                        <span class="current-price">${{ product.price | money_without_currency }}</span>
                        {% if product.compare_at_price > product.price %}
                            <span class="original-price">${{ product.compare_at_price | money_without_currency }}</span>
                        {% endif %}
                        </div>
                        
                        <div style="display: flex;justify-content: space-between;margin-top:auto;">
                            <!-- Color swatches -->
                            {% if product.options contains 'Color' %}
                                <div class="color-swatches">
                                    {% assign color_option = product.options_by_name['Color'] %}
                                    {% for value in color_option.values limit: 3 %}
                                        <div class="color-swatch" 
                                            data-color="{{ value | handleize }}"
                                            style="background-color: {{ value | handleize }};"
                                            title="{{ value }}">
                                        </div>
                                    {% endfor %}
                                </div>
                            {% else %}
                                <div class="color-swatches">
                                    <div class="color-swatch" 
                                        data-color="green"
                                        style="background-color: #7a9b8e;"
                                    ></div>
                                    <div class="color-swatch" 
                                        data-color="orange"
                                        style="background-color: #d4845c;"
                                    ></div>
                                    <div class="color-swatch" 
                                        data-color="black"
                                        style="background-color: #333;"
                                    ></div>
                                </div>
                            {% endif %}
                            
                            <button class="quick-view-btn" data-product-handle="{{ product.handle }}">
                                QUICK VIEW
                            </button>
                        </div>
                    </div>
                </div>
            {% endif %}
        {% endif %}
    {% endfor %}
    </div>
</div>

{{ 'my-product-list1.css' | asset_url | stylesheet_tag }}

