{% schema %}
  {
    "name": "newSletter-popup",
    "tag": "section",
    "class": "newsletter-popup",
    "enabled_on": {
        "groups": ["custom.overlay"]
    },
    "limit": 1,
    "settings": [
      
    ],
    "blocks": [
        {
            "type": "Text",
            "name": "Text",
            "settings": [
                {
                    "type": "inline_richtext",
                    "id": "text",
                    "label": "Text",
                    "default": "FIRST TIMER?"       
                }
            ]
        },
        {
            "type": "Heading",
            "name":"Heading",
            "settings": [
                {
                    "type": "inline_richtext",
                    "id": "heading",
                    "label": "Heading",
                    "default": "Sign up and get 20% off"
                }
            ]
        },
        {
            "type": "Form",
            "name":"Form",
            "limit": 1
        },
        {
            "type": "AsideBar",
            "name": "Aside Bar",
            "limit": 1,
            "settings": [
                {
                    "type": "text",
                    "id": "bar_text",
                    "label": "Heading",
                    "default": "Get 20% off"       
                }
            ]
        }
    ],
    "presets": [
      {
        "name": "newSletter-popup"
      }
    ]
  }
{% endschema %}