{% schema %}
{
  "name": "my-product-carousel",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection",
      "info": "Select collection to display products from"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 4,
      "max": 20,
      "step": 1,
      "default": 8,
      "label": "Products to show"
    },
    {
      "type": "text",
      "id": "category_label",
      "default": "DRESS",
      "label": "Category Label",
      "info": "Label shown on product cards"
    },
    {
      "type": "checkbox",
      "id": "autoplay",
      "default": false,
      "label": "Enable autoplay"
    },
    {
      "type": "range",
      "id": "autoplay_speed",
      "min": 3000,
      "max": 9000,
      "step": 500,
      "default": 5000,
      "label": "Autoplay speed (ms)",
      "info": "Only applies when autoplay is enabled"
    }
  ],
  "presets": [
    {
      "name": "my-product-carousel"
    }
  ]
}
{% endschema %}

<div class="my-product-carousel__container" data-section-id = "{{ section.id }}">
  <div class="carousel-track" id="carouselTrack">
    {% for product in section.settings.collection.products%}
      <div class="product-card">
        <img width="350" height="580" src="{{ product.featured_image | image_url: width:350 }}" alt="{{ product.title }}" loading="lazy">
        <div class="product-category">{{ section.settings.category_label | default: 'DRESS' }}</div>
        <div class="product-overlay">
          <h3 class="product-title">{{ product.title }}</h3>
        </div>
      </div>
    {% endfor %}
    <!-- Preset Carousel Area -->
    {% for product in section.settings.collection.products%}
      <div class="product-card copy">
        <img width="350" height="580" src="{{ product.featured_image | image_url: width:350 }}" alt="{{ product.title }}" loading="lazy">
        <div class="product-category">{{ section.settings.category_label | default: 'DRESS' }}</div>
        <div class="product-overlay">
          <h3 class="product-title">{{ product.title }}</h3>
        </div>
      </div>
    {% endfor %}
  </div>
  
  <!-- Navigation Arrows -->
  <button class="carousel-nav prev-btn" aria-label="Previous slide">
    <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
      <path d="M15 18L9 12L15 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
    </svg>
  </button>
  <button class="carousel-nav next-btn" aria-label="Next slide">
    <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
      <path d="M9 18L15 12L9 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
    </svg>
  </button>
  
  <!-- Dots Indicator -->
   <div class="carousel-dots" id="carouselDots">
    {% assign total_slides = section.settings.collection.products.size | times:1 %}
    {% assign slides_per_view = 4 %}
    {% assign total_pages = total_slides | divided_by: slides_per_view | ceil %}
    {% for i in (1..total_pages) %}
      <button class="carousel-dot {% if forloop.first %}active{% endif %}" data-slide="{{ forloop.index0 }}"></button>
    {% endfor %}
  </div>
</div>


