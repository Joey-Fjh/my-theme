                    class: "img"
            }}
        </div>
        <div class="img_info h2">
            {{ section.settings.image_info2 }}
        </div>
    </div>
    <div class="content__container">    
        <div class="img__container">
            {{ 
                section.settings.image_3 
                | image_url: width:326
                | image_tag:
                    alt: section.settings.alt,
                    class: "img"
            }}
        </div>
        <div class="img_info h2">
            {{ section.settings.image_info3 }}
        </div>
    </div>
    <div class="content__container">    
        <div class="img__container">
            {{ 
                section.settings.image_4 
                | image_url: width:326
                | image_tag:
                    alt: section.settings.alt,
                    class: "img"
            }}
        </div>
        <div class="img_info h2">
            {{ section.settings.image_info4 }}
        </div>
    </div>
</div>

