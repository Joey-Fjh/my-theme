<tab-control class="tab-container">
  <ul class="tab-titles">
    {% for block in section.blocks %}
      <li class="tab-title" 
        data-tab-index="{{ forloop.index }}"
      >
        type: {{ block.type }}<br>
        title: {{ block.settings.title | default: '无标题' }}

        {{ block.settings.title }}
      </li>
    {% endfor %}
  </ul>
  <div class="tab-contents">
    {% for block in section.blocks %}
      <div class="tab-content" 
        data-tab-index="{{ forloop.index }}"
      >
        {% render block %}
      </div>
    {% endfor %}
  </div>
</tab-control>

{% schema %}
  {
    "name": "Tab Control",
    "tag": "section",
    "class": "section",
    "blocks": [
      { 
        "type": "tab-item",
      }
    ],
    "max_blocks": 4,
    "presets": [
      {
        "name": "Tab Control",
        "blocks": [
          { "type": "tab-item" }
        ]
      }
    ]
  }
{% endschema %}