<div class="tab-container 
  {% if section.settings.layout == 'page_width' %} my-page-width {% endif %}"
>
  <ul class="tab-titles">
    {% for block in section.blocks %}
      <li class="tab-title" 
        data-tab-index="{{ forloop.index }}"
      >
        {{ block.settings.title }}
      </li>
    {% endfor %}
  </ul>
  <div class="tab-contents">
    {% for block in section.blocks %}
      <div class="tab-content" 
        data-tab-index="{{ forloop.index }}"
      >
        {% render block %}
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
  {
    "name": "Tab Control",
    "tag": "section",
    "class": "section",
    "settings": [
      {
        "type": "select",
        "id": "layout",
        "options": [
          {
            "value": "full_bleed",
            "label": "Full Bleed"
          },
          {
            "value": "page_width",
            "label": "Page Width"
          }
        ],
        "default": "full_bleed",
        "label": "Layout"
      },
    ],
    "blocks": [
      { 
        "type": "tab-item1",
        "name":"Tab Item1",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Title"
          }
        ]
      }
    ],
    "max_blocks": 4,
    "presets": [
      {
        "name": "Tab Control"
      }
    ]
  }
{% endschema %}