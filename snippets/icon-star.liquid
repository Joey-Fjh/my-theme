{%- stylesheet -%}
.my-rating__container {
    display: inline-flex; 
    gap: 4px; 
    align-items: center;

    .rating__star svg {
        width: 16px;
        height: 16px;
        color: #ddd; 
        transition: color 0.2s; 
    }
}

.my-rating__container[data-rating="1"] .rating__star:nth-child(1) svg {
    color: #ffc107;
}

.my-rating__container[data-rating="2"] .rating__star:nth-child(-n+2) svg {
    color: #ffc107;
}

.my-rating__container[data-rating="3"] .rating__star:nth-child(-n+3) svg {
    color: #ffc107;
}

.my-rating__container[data-rating="4"] .rating__star:nth-child(-n+4) svg {
    color: #ffc107;
}

.my-rating__container[data-rating="5"] .rating__star svg {
    color: #ffc107;
}
{%- endstylesheet -%}